<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true" >
    <!-- 상단 날짜 텍스트 -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="4월 5일 토요일"
        android:textSize="18sp"
        android:textColor="#0F0F0F"
        android:textStyle="bold" />

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="16sp"
        android:textColor="#FF4FA477"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:background="@android:color/transparent" />

    <!-- 캘린더 아이콘 버튼 (오른쪽 위) -->
    <ImageButton
        android:id="@+id/btnCalendar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@id/btnDone"
        android:layout_toStartOf="@id/btnDone"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_calendar2"
        android:contentDescription="캘린더 열기" />

    <!-- 회색 구분선 추가 -->
    <View
        android:id="@+id/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dateText"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:background="#DDDDDD" />

    <!-- ScrollView는 dividerLine 아래부터 시작 -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dividerLine"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- 이미지 + X 버튼 -->
            <FrameLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/selectedImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#F0F0F0" />

                <ImageButton
                    android:id="@+id/btnRemoveImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_close" />
            </FrameLayout>

            <!-- EditText -->
            <EditText
                android:id="@+id/editTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="글쓰기 시작...\n#키워드를 사용해보세요"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:textColor="#5F5F61"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/menuContainer"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/bg_half_circle"
            android:visibility="gone">

            <!-- 메뉴 아이콘들 (펜, 마이크, 사진, 팔레트) 배치 -->
            <ImageButton
                android:id="@+id/btnPen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pen" />

            <ImageButton
                android:id="@+id/btnMic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_marginStart="35dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_microphone" />

            <ImageButton
                android:id="@+id/btnPhoto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_marginEnd="35dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_photo" />

            <ImageButton
                android:id="@+id/btnPalette"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_palette" />
        </RelativeLayout>

        <!-- 중앙 초록 버튼 (항상 맨 앞에!) -->
        <ImageButton
            android:id="@+id/btnToggleMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_circle_green"
            android:contentDescription="작성 메뉴 열기" />

    </FrameLayout>

</RelativeLayout>
